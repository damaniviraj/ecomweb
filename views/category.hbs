    <div class="container">
    
    <header>
        <a href ="/logout"><input type="button"   value="Logout" style="float: right;"></a>

       <h1>Online Shopping</h1>
       <a href ="/category/insert"><input type="button"   value="Add Category" style="float: right;"></a>
       
