    <article >
        <h1>Edit Category</h1>
      

      <div id="category1" name="todo">
          <table id="myTable" border="1">

            <tr>
                <th>#</th>
                <th>id</th>
                <th>name</th>
                <th>Image</th>
                <th>Action</th>
                
            </tr>
            {{#each userresults}}
             
            <tr id="id_{{this.id}}">
                <td>{{@key}} </td>
                <td>{{this.id}} </td>
                <td>{{this.name}}</td>
                <td><img src="/upload/{{this.catImg}}" width="100px"></td>
                <td><a href="/category/edit/{{this.id}}"><input type="button"  value="Edit"> </a></td>
                <td><a href="/category/delete/{{this.id}}" onclick="return confirm('Are you sure you want to delete?')"> <input type="button"  value="Delete"> </a></td>
                
                </tr>
                {{/each}}
                </table>
      </div>
    </article>
     
